#!/bin/bash

DIR=$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd)
export PATH=$DIR:$PATH

function updateall {
  pulp-admin rpm repo update --repo-id=$1 $@
}

login

promote centos-7-base-x86_64 $@
promote centos-7-updates-x86_64 $@
promote centos-6-base-x86_64 $@
promote centos-6-updates-x86_64 $@
promote centos-5-base-x86_64 $@
promote centos-5-updates-x86_64 $@
promote centos-5.4-base-x86_64 $@
promote centos-5.4-updates-x86_64 $@
promote rhel-6-server-x86_64 $@
promote rhel-6-server-i386 $@
promote rhel-5-server-x86_64 $@
promote rhel-5-server-i386 $@
promote epel-7-x86_64 $@

logout
